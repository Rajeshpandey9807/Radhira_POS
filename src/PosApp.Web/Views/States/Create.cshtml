@model StateFormViewModel
@{
    ViewData["Title"] = "Add state";
}

<section class="users-header">
    <div>
        <p class="eyebrow">Business setup</p>
        <h2>Create state</h2>
        <p>Register every operating state to keep filings tidy.</p>
    </div>
</section>

<form asp-action="Create" method="post" class="card-form">
    <partial name="_Form" model="Model" />
    <div class="form-actions">
        <a class="btn ghost" asp-action="Index">Cancel</a>
        <button class="btn primary" type="submit">Save state</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
