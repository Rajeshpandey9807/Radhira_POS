@model StateFormViewModel
@{
    ViewData["Title"] = "Edit state";
}

<section class="users-header">
    <div>
        <p class="eyebrow">Business setup</p>
        <h2>Edit state</h2>
        <p>Rename the state or adjust its availability.</p>
    </div>
</section>

<form asp-action="Edit" asp-route-id="@Model.StateId" method="post" class="card-form">
    <input type="hidden" asp-for="StateId" />
    <partial name="_Form" model="Model" />
    <div class="form-actions">
        <a class="btn ghost" asp-action="Index">Cancel</a>
        <button class="btn primary" type="submit">Update state</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
