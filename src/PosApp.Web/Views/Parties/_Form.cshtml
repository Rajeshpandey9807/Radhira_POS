@model PartyCreateRequest

<div class="card-stack">
    <section class="card-form" aria-label="General details">
        <header class="card-form__header">
            <div>
                <h3>General details</h3>
                <p class="card-form__subtitle">Basic party identity, tax, and classification.</p>
            </div>
        </header>
        <div class="form-grid">
            <div class="field-group span-all">
                <label asp-for="PartyName">Party Name <span class="required-mark">*</span></label>
                <input asp-for="PartyName" placeholder="e.g., Radhira Retail" autocomplete="organization" autofocus />
                <small class="field-hint">Required. Use the name you want on invoices and reports.</small>
                <span asp-validation-for="PartyName"></span>
            </div>

            <div class="field-group">
                <label asp-for="MobileNumber"></label>
                <input asp-for="MobileNumber"
                       placeholder="e.g., 9876543210"
                       inputmode="numeric"
                       autocomplete="tel"
                       pattern="[0-9]*"
                       maxlength="15" />
                <small class="field-hint">Optional. Digits only.</small>
                <span asp-validation-for="MobileNumber"></span>
            </div>

            <div class="field-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" placeholder="name@company.com" type="email" autocomplete="email" />
                <small class="field-hint">Optional. Used for sending invoices/updates.</small>
                <span asp-validation-for="Email"></span>
            </div>

            <div class="field-group">
                <label asp-for="OpeningBalance"></label>
                <input asp-for="OpeningBalance" type="number" step="0.01" inputmode="decimal" placeholder="0.00" />
                <small class="field-hint">Optional. Set to 0.00 if none.</small>
                <span asp-validation-for="OpeningBalance"></span>
            </div>

            <div class="field-group">
                <label asp-for="GSTIN"></label>
                <input asp-for="GSTIN"
                       class="input-uppercase"
                       maxlength="15"
                       placeholder="e.g., 22AAAAA0000A1Z5"
                       autocapitalize="characters"
                       spellcheck="false"
                       autocomplete="off" />
                <small class="field-hint">Optional. Exactly 15 characters.</small>
                <span asp-validation-for="GSTIN"></span>
            </div>

            <div class="field-group">
                <label asp-for="PANNumber"></label>
                <input asp-for="PANNumber"
                       class="input-uppercase"
                       maxlength="10"
                       placeholder="e.g., AAAAA0000A"
                       autocapitalize="characters"
                       spellcheck="false"
                       autocomplete="off" />
                <small class="field-hint">Optional.</small>
                <span asp-validation-for="PANNumber"></span>
            </div>

            <div class="field-group">
                <label asp-for="PartyTypeId">Party Type <span class="required-mark">*</span></label>
                <select asp-for="PartyTypeId" data-bp-select="true">
                    <option value="">Choose...</option>
                </select>
                <small class="field-hint">Used for filtering and reporting.</small>
                <span asp-validation-for="PartyTypeId"></span>
            </div>

            <div class="field-group">
                <label asp-for="PartyCategoryId">Party Category <span class="required-mark">*</span></label>
                <select asp-for="PartyCategoryId" data-bp-select="true">
                    <option value="">Choose...</option>
                </select>
                <small class="field-hint">Helps segment parties in summaries.</small>
                <span asp-validation-for="PartyCategoryId"></span>
            </div>
        </div>
    </section>

    <section class="card-form" aria-label="Address details">
        <header class="card-form__header">
            <div>
                <h3>Address details</h3>
                <p class="card-form__subtitle">Billing/shipping addresses and credit terms.</p>
            </div>
        </header>
        <div class="form-grid">
            <div class="field-group span-all">
                <label asp-for="BillingAddress"></label>
                <textarea asp-for="BillingAddress" placeholder="Street, city, state, PIN" data-billing-address></textarea>
                <span asp-validation-for="BillingAddress"></span>
            </div>

            <div class="field-group span-all">
                <label asp-for="ShippingAddress"></label>
                <textarea asp-for="ShippingAddress" placeholder="Street, city, state, PIN" data-shipping-address></textarea>
                <span asp-validation-for="ShippingAddress"></span>
            </div>

            <div class="field-group checkbox span-all">
                <label>
                    <input asp-for="SameAsBilling" data-same-as-billing />
                    Same as Billing
                </label>
            </div>

            <div class="field-group">
                <label asp-for="CreditPeriod"></label>
                <input asp-for="CreditPeriod" type="number" min="0" step="1" placeholder="0" />
                <span asp-validation-for="CreditPeriod"></span>
            </div>

            <div class="field-group">
                <label asp-for="CreditLimit"></label>
                <input asp-for="CreditLimit" type="number" step="0.01" placeholder="0.00" />
                <span asp-validation-for="CreditLimit"></span>
            </div>
        </div>
    </section>

    <section class="card-form" aria-label="Contact person details">
        <header class="card-form__header">
            <div>
                <h3>Contact person</h3>
                <p class="card-form__subtitle">Optional point of contact for billing and follow-ups.</p>
            </div>
        </header>
        <div class="form-grid">
            <div class="field-group">
                <label asp-for="ContactPersonName"></label>
                <input asp-for="ContactPersonName" placeholder="Contact person name" autocomplete="name" />
                <span asp-validation-for="ContactPersonName"></span>
            </div>

            <div class="field-group">
                <label asp-for="DateOfBirth"></label>
                <input asp-for="DateOfBirth" type="date" />
                <span asp-validation-for="DateOfBirth"></span>
            </div>
        </div>
    </section>

    <section class="card-form" aria-label="Bank details">
        <header class="card-form__header">
            <div>
                <h3>Bank details</h3>
                <p class="card-form__subtitle">Bank and UPI information for receipts and settlements.</p>
            </div>
        </header>
        <div class="form-grid">
            <div class="field-group">
                <label asp-for="AccountNumber"></label>
                <input asp-for="AccountNumber" placeholder="Account number" inputmode="numeric" autocomplete="off" data-account-number />
                <span asp-validation-for="AccountNumber"></span>
            </div>

            <div class="field-group">
                <label asp-for="ReEnterAccountNumber"></label>
                <input asp-for="ReEnterAccountNumber" placeholder="Re-enter account number" inputmode="numeric" autocomplete="off" data-account-number-confirm />
                <span asp-validation-for="ReEnterAccountNumber"></span>
            </div>

            <div class="field-group">
                <label asp-for="IFSC"></label>
                <input asp-for="IFSC" placeholder="IFSC" autocapitalize="characters" />
                <span asp-validation-for="IFSC"></span>
            </div>

            <div class="field-group">
                <label asp-for="BranchName"></label>
                <input asp-for="BranchName" placeholder="Branch" />
                <span asp-validation-for="BranchName"></span>
            </div>

            <div class="field-group">
                <label asp-for="AccountHolderName"></label>
                <input asp-for="AccountHolderName" placeholder="Account holder name" />
                <span asp-validation-for="AccountHolderName"></span>
            </div>

            <div class="field-group">
                <label asp-for="UPI"></label>
                <input asp-for="UPI" placeholder="name@upi" autocapitalize="none" />
                <span asp-validation-for="UPI"></span>
            </div>
        </div>
    </section>
</div>

