@model CategoryFormViewModel
@{
    ViewData["Title"] = "Add category";
}

<section class="users-header">
    <div>
        <p class="eyebrow">Product management</p>
        <h2>Create product category</h2>
        <p>Organize your products into categories for better inventory management.</p>
    </div>
</section>

<form asp-action="Create" method="post" class="card-form">
    <partial name="_Form" model="Model" />
    <div class="form-actions">
        <a class="btn ghost" asp-action="Index">Cancel</a>
        <button class="btn primary" type="submit">Save category</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

