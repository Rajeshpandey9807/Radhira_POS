@model UserFormViewModel
@{
    ViewData["Title"] = "Create user";
}

<section class="users-header">
    <div>
        <p class="eyebrow">User creation</p>
        <h2>Create a new user</h2>
        <p>Enter basic details and assign a role.</p>
    </div>
    <div class="hero-actions">
        <a asp-action="Index" class="btn ghost">View users</a>
    </div>
</section>

<form asp-action="Create" method="post" class="card-form">
    <partial name="_Form" model="Model" />
    <div class="form-actions">
        <a class="btn ghost" asp-action="Index">Cancel</a>
        <button class="btn primary" type="submit">Create user</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
