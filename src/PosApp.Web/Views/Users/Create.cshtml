@model UserFormViewModel
@{
    ViewData["Title"] = "Invite user";
}

<section class="users-header">
    <div>
        <p class="eyebrow">Invite teammate</p>
        <h2>Keep the shift running</h2>
        <p>Set the role and we will scaffold permissions automatically.</p>
    </div>
</section>

<form asp-action="Create" method="post" class="card-form">
    <partial name="_Form" model="Model" />
    <div class="form-actions">
        <a class="btn ghost" asp-action="Index">Cancel</a>
        <button class="btn primary" type="submit">Invite user</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
