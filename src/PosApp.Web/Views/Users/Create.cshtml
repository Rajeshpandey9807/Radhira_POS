<section class="users-header">
    <div>
        <p class="eyebrow">Create user</p>
        <h2>Two-step onboarding</h2>
        <p>Step 1 captures contact details. Step 2 creates the login. On confirm, ask for OTP to verify email/mobile.</p>
    </div>
</section>

<!-- Static HTML template only (no Razor / no scripts). -->
<form method="post" class="card-form">
    <div class="wizard-steps" aria-label="Create user steps">
        <div class="wizard-step is-active">
            <span class="wizard-step__pill">1</span>
            <span class="wizard-step__label">Contact</span>
        </div>
        <div class="wizard-step">
            <span class="wizard-step__pill">2</span>
            <span class="wizard-step__label">Account</span>
        </div>
    </div>

    <!-- Step 1 -->
    <div class="wizard-panel" data-step="1">
        <div class="form-grid">
            <div class="field-group">
                <label for="FullName">Full name</label>
                <input id="FullName" name="FullName" placeholder="Jane Doe" autocomplete="name" required />
                <span></span>
            </div>
            <div class="field-group">
                <label for="Email">Email</label>
                <input id="Email" name="Email" placeholder="jane&#64;store.com" type="email" autocomplete="email" required />
                <span></span>
            </div>
            <div class="field-group">
                <label for="MobileNumber">Mobile number</label>
                <input id="MobileNumber" name="MobileNumber" placeholder="+1 555 0100" type="tel" autocomplete="tel" required />
                <span></span>
            </div>
        </div>
    </div>

    <!-- Step 2 (template: initially hidden) -->
    <div class="wizard-panel" data-step="2" hidden>
        <div class="form-grid">
            <div class="field-group">
                <label for="Username">Username</label>
                <input id="Username" name="Username" placeholder="cashier01" autocomplete="username" required />
                <span></span>
            </div>
            <div class="field-group">
                <label for="Password">Password</label>
                <input id="Password" name="Password" type="password" autocomplete="new-password" required />
                <span></span>
            </div>
        </div>
    </div>

    <div class="form-actions">
        <a class="btn ghost" href="/Users">Cancel</a>
        <button class="btn ghost" type="button">Back</button>
        <button class="btn primary" type="button">Next</button>
        <button class="btn primary" type="button">Confirm &amp; Save</button>
    </div>

    <!-- OTP prompt (template: initially hidden) -->
    <div class="otp-modal" hidden role="dialog" aria-modal="true" aria-labelledby="otp-title">
        <div class="otp-modal__backdrop"></div>
        <div class="otp-modal__panel">
            <header class="otp-modal__header">
                <h3 id="otp-title">Verify email / mobile</h3>
                <button class="otp-modal__close" type="button" aria-label="Close">&times;</button>
            </header>
            <p class="otp-modal__copy">
                Enter the 6-digit OTP you received on email/mobile to complete verification.
            </p>
            <div class="field-group">
                <label for="OtpCode">OTP</label>
                <input id="OtpCode" name="OtpCode" inputmode="numeric" autocomplete="one-time-code" maxlength="6" placeholder="123456" />
                <span class="otp-modal__error" hidden>Please enter a valid 6-digit OTP.</span>
            </div>
            <div class="otp-modal__actions">
                <button class="btn ghost" type="button">Cancel</button>
                <button class="btn primary" type="submit">Verify &amp; Save</button>
            </div>
            <p class="otp-modal__hint">
                Didn&#8217;t receive an OTP? <a href="#">Resend</a>
            </p>
        </div>
    </div>
</form>
