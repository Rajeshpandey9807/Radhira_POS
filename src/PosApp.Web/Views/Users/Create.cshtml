@model UserFormViewModel
@{
    ViewData["Title"] = "Add user";
}

<section class="users-header">
    <div>
        <p class="eyebrow">Add teammate</p>
        <h2>Capture the essentials</h2>
        <p>Store contact info and credentials in one pass.</p>
    </div>
</section>

<form asp-action="Create" method="post" class="card-form">
    <partial name="_Form" model="Model" />
    <div class="form-actions">
        <a class="btn ghost" asp-action="Index">Cancel</a>
        <button class="btn primary" type="submit">Save user</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
