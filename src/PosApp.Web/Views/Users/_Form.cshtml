@model UserFormViewModel

<div class="form-grid">
    <div class="field-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" placeholder="Floor Cashier" />
        <span asp-validation-for="FullName"></span>
    </div>
    <div class="field-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" placeholder="name@store.com" type="email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="field-group">
        <label asp-for="MobileNumber"></label>
        <input asp-for="MobileNumber" placeholder="+1 555 0100" type="tel" />
        <span asp-validation-for="MobileNumber"></span>
    </div>
    <div class="field-group">
        <label asp-for="RoleId">Role</label>
        <select asp-for="RoleId">
            <option value="">Choose...</option>
            @foreach (var role in Model.Roles)
            {
                <option value="@role.Id">@role.Name</option>
            }
        </select>
        <span asp-validation-for="RoleId"></span>
    </div>
    <div class="field-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" autocomplete="new-password" />
        <span asp-validation-for="Password"></span>
        @if (Model.Id.HasValue)
        {
            <small>Leave blank to keep the current password.</small>
        }
    </div>
</div>
