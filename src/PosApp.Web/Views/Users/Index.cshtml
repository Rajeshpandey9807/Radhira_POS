@model IReadOnlyList<UserAccount>
@{
    ViewData["Title"] = "Team";
}

<section class="users-header">
    <div>
        <p class="eyebrow">Team roster</p>
        <h2>Dynamic user management</h2>
        <p>Invite, edit, or disable operators with a couple of taps. All powered by Dapper + SQLite.</p>
    </div>
    <div class="hero-actions">
        <a asp-action="Create" class="btn primary">Invite teammate</a>
        <a asp-controller="Home" asp-action="Pos" class="btn ghost">Back to POS</a>
    </div>
</section>

<table class="modern-table">
    <thead>
        <tr>
            <th>User</th>
            <th>Role</th>
            <th>Status</th>
            <th>Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5">
                    <div class="empty">No users yet. Invite your first teammate.</div>
                </td>
            </tr>
        }
        else
        {
            foreach (var user in Model)
            {
                <tr>
                    <td>
                        <div class="user-cell">
                            <div class="avatar-circle">@user.FullName[0]</div>
                            <div>
                                <strong>@user.FullName</strong>
                                <p>@user.Email</p>
                                <p>@user.MobileNumber</p>
                            </div>
                        </div>
                    </td>
                    <td>@user.RoleName</td>
                    <td>
                        <form asp-action="Toggle"
                              asp-route-id="@user.UserId"
                              asp-route-activate="@(user.IsActive ? false : true)"
                              method="post"
                              class="toggle-switch">
                            <button type="submit"
                                    class="toggle-switch__button @(user.IsActive ? "is-active" : string.Empty)"
                                    aria-pressed="@(user.IsActive ? "true" : "false")">
                                <span class="toggle-switch__track">
                                    <span class="toggle-switch__thumb"></span>
                                </span>
                                <span class="toggle-switch__label">@(
                                        user.IsActive ? "Active" : "Inactive"
                                    )</span>
                            </button>
                        </form>
                    </td>
                    <td>@user.CreatedOn.ToString("MMM dd")</td>
                    <td class="actions">
                        <a asp-action="Edit" asp-route-id="@user.UserId">Edit</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
