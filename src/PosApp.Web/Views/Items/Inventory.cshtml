@{
    ViewData["Title"] = "Inventory";
}

@model IReadOnlyList<PosApp.Web.Features.Inventory.ProductListItem>

<header class="page-header">
    <div class="page-header__copy">
        <p class="eyebrow">Item</p>
        <h2>Inventory</h2>
        <p>Manage products, pricing, GST, and stock levels.</p>
    </div>
    <div class="page-header__actions">
        <a asp-controller="Items" asp-action="Create" class="btn primary">+ Add New Product</a>
    </div>
</header>

<section class="card" aria-label="Product list">
    <div class="card__header">
        <h3 class="card__title">Products</h3>
        <p class="card__subtitle">All items currently available for billing and sales.</p>
    </div>

    <div class="table-toolbar" role="group" aria-label="Product filters">
        <div class="table-toolbar__left">
            <div class="field field--inline">
                <label class="sr-only" for="inventorySearch">Search products</label>
                <input id="inventorySearch" type="search" placeholder="Search item name, code, category…" />
            </div>
            <div class="field field--inline">
                <label class="sr-only" for="inventoryCategory">Category</label>
                <select id="inventoryCategory" aria-label="Category">
                    <option selected>All categories</option>
                    <option>Stationery</option>
                    <option>Beverages</option>
                    <option>Electronics</option>
                    <option>Services</option>
                    <option>Misc</option>
                </select>
            </div>
            <div class="field field--inline">
                <label class="sr-only" for="inventoryStatus">Status</label>
                <select id="inventoryStatus" aria-label="Status">
                    <option selected>All status</option>
                    <option>Active</option>
                    <option>Low stock</option>
                    <option>Inactive</option>
                </select>
            </div>
        </div>
        <div class="table-toolbar__right">
            <button type="button" class="btn ghost btn--sm">Export</button>
        </div>
    </div>

    <div class="table-wrap" role="region" aria-label="Product table" tabindex="0">
        <table class="table table--minimal">
            <thead>
                <tr>
                    <th scope="col">Item Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Product Type</th>
                    <th scope="col" class="is-right">Sales Price</th>
                    <th scope="col" class="is-right">Stock Quantity</th>
                    <th scope="col" class="is-right">GST %</th>
                    <th scope="col">Status</th>
                    <th scope="col" class="is-right">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model is null || Model.Count == 0)
                {
                    <tr>
                        <td colspan="8">
                            <div class="empty">No products yet. Click <strong>+ Add New Product</strong> to get started.</div>
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        var typeLabel = string.IsNullOrWhiteSpace(item.ProductTypeName) ? "—" : item.ProductTypeName;
                        var categoryLabel = string.IsNullOrWhiteSpace(item.CategoryName) ? "—" : item.CategoryName;
                        var codeLabel = string.IsNullOrWhiteSpace(item.ItemCode) ? "—" : item.ItemCode;
                        var priceLabel = item.SalesPrice.HasValue ? $"₹ {item.SalesPrice.Value:0.00}" : "—";
                        var stockLabel = item.CurrentStock.HasValue ? $"{item.CurrentStock.Value:0.##}" : "—";
                        var gstLabel = item.GstRateId.HasValue ? item.GstRateId.Value.ToString() : "—";
                        var statusClass = item.IsActive ? "badge--success" : "badge--muted";
                        var dotClass = item.IsActive ? "dot--success" : "dot--muted";
                        var statusText = item.IsActive ? "Active" : "Inactive";
                        <tr>
                            <td>
                                <div class="cell-title">@item.ItemName</div>
                                <div class="cell-subtitle">Item Code: @codeLabel</div>
                            </td>
                            <td>@categoryLabel</td>
                            <td><span class="badge badge--soft">@typeLabel</span></td>
                            <td class="is-right">@priceLabel</td>
                            <td class="is-right">@stockLabel</td>
                            <td class="is-right">@gstLabel</td>
                            <td><span class="badge @statusClass"><span class="dot @dotClass" aria-hidden="true"></span>@statusText</span></td>
                            <td class="is-right">
                                <span class="link link--muted" title="View/edit coming soon">View</span>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</section>
