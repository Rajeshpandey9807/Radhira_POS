@model PosApp.Web.Features.Items.ItemCreateRequest

<div class="form-group">
    <label asp-for="Name" class="form-label"></label>
    <input asp-for="Name" class="form-control field" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Sku" class="form-label"></label>
    <input asp-for="Sku" class="form-control field" />
    <span asp-validation-for="Sku" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="UnitPrice" class="form-label"></label>
    <input asp-for="UnitPrice" class="form-control field" type="number" step="0.01" />
    <span asp-validation-for="UnitPrice" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="form-label">Item Type</label>
    <div class="radio-group" style="display: flex; gap: 1rem; align-items: center; margin-top: 0.5rem;">
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="ItemType" value="1" id="ItemType_Product" checked="@(Model.ItemType == PosApp.Web.Features.Items.ItemType.Product)">
            <label class="form-check-label" for="ItemType_Product">
                Product
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="ItemType" value="2" id="ItemType_Service" checked="@(Model.ItemType == PosApp.Web.Features.Items.ItemType.Service)">
            <label class="form-check-label" for="ItemType_Service">
                Service
            </label>
        </div>
    </div>
    <span asp-validation-for="ItemType" class="text-danger"></span>
</div>
