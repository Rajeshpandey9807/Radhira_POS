@model PosApp.Web.Features.Items.ItemCreateRequest
@{
    ViewData["Title"] = "Create Item";
}

<section class="users-header">
    <div>
        <p class="eyebrow">Inventory</p>
        <h2>Create Item</h2>
        <p>Add new products or services to your catalog.</p>
    </div>
</section>

<form asp-action="Create" method="post" class="wizard-form">
    @Html.AntiForgeryToken()
    <partial name="_Form" model="Model" />

    <div class="form-actions">
        <a class="btn ghost" asp-controller="Home" asp-action="Index">Cancel</a>
        <button class="btn primary" type="submit">Save</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
