@model IReadOnlyList<RegistrationTypeListItem>
@{
    ViewData["Title"] = "Registration types";
}

<section class="users-header">
    <div>
        <p class="eyebrow">Business setup</p>
        <h2>Registration types</h2>
        <p>Capture statutory registration types (LLC, Partnership, etc.) for use across onboarding flows.</p>
    </div>
    <div class="hero-actions">
        <a asp-action="Create" class="btn primary">Add registration type</a>
        <a asp-controller="Home" asp-action="Index" class="btn ghost">Back to dashboard</a>
    </div>
</section>

<table class="modern-table">
    <thead>
        <tr>
            <th>Registration type</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3">
                    <div class="empty">No registration types yet. Add the first one.</div>
                </td>
            </tr>
        }
        else
        {
            foreach (var type in Model)
            {
                <tr>
                    <td>
                        <strong>@type.RegistrationTypeName</strong>
                    </td>
                    <td>
                        <form asp-action="Toggle"
                              asp-route-id="@type.RegistrationTypeId"
                              asp-route-activate="@(type.IsActive ? false : true)"
                              method="post"
                              class="toggle-switch">
                            <button type="submit"
                                    class="toggle-switch__button @(type.IsActive ? "is-active" : string.Empty)"
                                    aria-pressed="@(type.IsActive ? "true" : "false")">
                                <span class="toggle-switch__track">
                                    <span class="toggle-switch__thumb"></span>
                                </span>
                                <span class="toggle-switch__label">@(
                                        type.IsActive ? "Active" : "Inactive"
                                    )</span>
                            </button>
                        </form>
                    </td>
                    <td class="actions">
                        <a asp-action="Edit" asp-route-id="@type.RegistrationTypeId">Edit</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
