@model RegistrationTypeFormViewModel
@{
    ViewData["Title"] = "Edit registration type";
}

<section class="users-header">
    <div>
        <p class="eyebrow">Business setup</p>
        <h2>Edit registration type</h2>
        <p>Rename or toggle the type without disrupting historic data.</p>
    </div>
</section>

<form asp-action="Edit" asp-route-id="@Model.RegistrationTypeId" method="post" class="card-form">
    <input type="hidden" asp-for="RegistrationTypeId" />
    <partial name="_Form" model="Model" />
    <div class="form-actions">
        <a class="btn ghost" asp-action="Index">Cancel</a>
        <button class="btn primary" type="submit">Update type</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
