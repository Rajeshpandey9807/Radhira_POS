@model IndustryTypeFormViewModel
@{
    ViewData["Title"] = "Edit industry type";
}

<section class="users-header">
    <div>
        <p class="eyebrow">Business setup</p>
        <h2>Edit industry type</h2>
        <p>Rename or inactivate industry types to keep downstream options clean.</p>
    </div>
</section>

<form asp-action="Edit" asp-route-id="@Model.IndustryTypeId" method="post" class="card-form">
    <input type="hidden" asp-for="IndustryTypeId" />
    <partial name="_Form" model="Model" />
    <div class="form-actions">
        <a class="btn ghost" asp-action="Index">Cancel</a>
        <button class="btn primary" type="submit">Update type</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
