<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Radhira POS</title>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script>
        (function () {
            var storageKey = "radhira-pos:theme";
            try {
                var stored = localStorage.getItem(storageKey);
                var prefersLight = window.matchMedia && window.matchMedia("(prefers-color-scheme: light)").matches;
                var theme = stored === "light" || stored === "dark"
                    ? stored
                    : (prefersLight ? "light" : "dark");
                document.documentElement.setAttribute("data-theme", theme);
            } catch (error) {
                document.documentElement.setAttribute("data-theme", "dark");
            }
        })();
    </script>
</head>
<body>
@{
    var pageTitle = (ViewData["Title"] as string) ?? "Dashboard";
}
    <div class="app-shell">
        <aside class="side-nav">
            <a class="brand" asp-controller="Home" asp-action="Index">Radhira POS</a>
            <p class="side-tagline">Smart retail, bold pink.</p>
            <button type="button"
                    class="sidebar-toggle pill-button"
                    data-sidebar-toggle
                    aria-pressed="false">
                <span class="sidebar-toggle-icon" aria-hidden="true"></span>
                <span data-sidebar-toggle-label>Hide menu</span>
            </button>
            <nav class="nav-menu">
                <a asp-controller="Home" asp-action="Index">Dashboard</a>
                <a asp-controller="Users" asp-action="Index">Team</a>
                <a asp-controller="Users" asp-action="Create">Create user</a>
                <a asp-controller="Roles" asp-action="Index">Roles</a>
                <a href="#">Customer</a>
                <a href="#">Vendors</a>
                <a href="#">Item</a>
                <a href="#">Sales</a>
                <a href="#">Purchase</a>
                <a href="#">Report</a>
            </nav>
            <div class="user-chip stack">
                <div>
                    <span class="chip-label">Signed in</span>
                    <strong>Admin</strong>
                </div>
                <span class="dot"></span>
            </div>
        </aside>

        <div class="main-column">
            <header class="top-bar">
                <div>
                    <p class="eyebrow">Overview</p>
                    <h1>@pageTitle</h1>
                </div>
                <div class="top-actions">
                    <div class="breadcrumbs">
                        <span>Home</span>
                        <span>/</span>
                        <span>@pageTitle</span>
                    </div>
                    <button type="button"
                            class="theme-switch pill-button"
                            data-theme-toggle
                            aria-pressed="false">
                        <span data-theme-toggle-label>Light mode</span>
                    </button>
                </div>
            </header>

            <main role="main">
                @RenderBody()
            </main>

            <footer>
                <p>&copy; @DateTime.UtcNow.Year Radhira POS Â· Smart retail, bold pink.</p>
            </footer>
        </div>
    </div>

    @if (TempData["ToastMessage"] is string toast)
    {
        <div class="toast">@toast</div>
    }

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
