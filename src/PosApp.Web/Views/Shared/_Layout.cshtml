<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Radhira POS</title>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="app-shell">
        <nav class="top-nav">
            <a class="brand" asp-controller="Home" asp-action="Index">Radhira POS</a>
            <div class="nav-links">
                <a asp-controller="Home" asp-action="Index">Dashboard</a>
                <a asp-controller="Home" asp-action="Pos">POS</a>
                <a asp-controller="Users" asp-action="Index">Users</a>
            </div>
            <div class="user-chip">
                <span>Admin</span>
                <span class="dot"></span>
            </div>
        </nav>

        <main role="main">
            @RenderBody()
        </main>

        <footer>
            <p>&copy; @DateTime.UtcNow.Year Radhira POS Â· Smart retail, bold pink.</p>
        </footer>
    </div>

    @if (TempData["ToastMessage"] is string toast)
    {
        <div class="toast">@toast</div>
    }

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
